{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2019"],
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    /* Needed for colyseus */
    "experimentalDecorators": true
  },
  "exclude": ["node_modules", "dist", "test"],
  "include": ["src"]
}
